<?xml version="1.0" encoding="UTF-8"?>

<!-- 创建新服务器 -->

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ChangeTo">
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>
    <children>
        <HBox prefHeight="70.0" prefWidth="500.0">
            <children>
                <Label alignment="CENTER" prefHeight="70.0" prefWidth="150.0" style="-fx-border-color: black;" text="服务器名" textAlignment="CENTER">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="worldName" prefHeight="70.0" prefWidth="350.0" promptText="请输入新世界名" style="-fx-border-color: black;">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
            </children>
        </HBox>
        <HBox prefHeight="70.0" prefWidth="500.0">
            <children>
                <Label alignment="CENTER" prefHeight="70.0" prefWidth="150.0" style="-fx-border-color: black;" text="简介" textAlignment="CENTER">
                    <font>
                        <Font size="20.0" />
                    </font>
                </Label>
                <TextField fx:id="briefIntroduction" prefHeight="70.0" prefWidth="350.0" promptText="请输入新简介" style="-fx-border-color: black;">
                    <font>
                        <Font size="20.0" />
                    </font>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </TextField>
            </children>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </HBox>
        <Button fx:id="button" alignment="CENTER" mnemonicParsing="false" onAction="#change" prefHeight="60.0" prefWidth="200.0" text="确认更改" textAlignment="CENTER">
            <font>
                <Font size="20.0" />
            </font>
            <VBox.margin>
                <Insets left="100.0" top="10.0" />
            </VBox.margin>
        </Button>
    </children>
</VBox>
